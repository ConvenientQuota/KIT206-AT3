<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="167*"/>
            <RowDefinition Height="717*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>
        <ComboBox Name="ResearcherComboBox" HorizontalAlignment="Left" Margin="152,120,0,0" VerticalAlignment="Top" Width="122" RenderTransformOrigin="0.5, 0.5" Height="25" SelectionChanged="ResearcherComboBox_SelectionChanged" Grid.Row="1">
            <ComboBoxItem>Student</ComboBoxItem>
            <ComboBoxItem>A</ComboBoxItem>
            <ComboBoxItem>B</ComboBoxItem>
            <ComboBoxItem>C</ComboBoxItem>
            <ComboBoxItem>D</ComboBoxItem>
            <ComboBoxItem>E</ComboBoxItem>
            <ComboBoxItem>All</ComboBoxItem>
        </ComboBox>
        <Image x:Name="ResearcherPhoto" Source="{Binding Path=Photo}" Grid.Column="1" Margin="230,20,98,20">
        </Image>
        <ListView Name="ResearcherListView" ItemsSource="{Binding Researchers}" HorizontalAlignment="Left" Height="434" VerticalAlignment="Top" Width="254" SelectionChanged="ResearcherListView_SelectionChanged" Grid.Row="1" Margin="25,161,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView Name="PublicationListView" ItemsSource="{Binding Publications}" Margin="10,343,10,10" Grid.Row="1" SelectionChanged="PublicationListView_SelectionChanged" Grid.Column="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Title}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Rectangle Height="623" Grid.Row="1" Stroke="Black" VerticalAlignment="Top" Margin="2,10,10,0"/>
        <Label Content="Show By:" HorizontalAlignment="Left" Height="25" Margin="26,120,0,0" Grid.Row="1" VerticalAlignment="Top" Width="68"/>
        <Label Content="Filter By Name:" Margin="42,44,0,582" Grid.Row="1" HorizontalAlignment="Left" Width="94"/>
        <StackPanel Name="ResearcherDetails" Orientation="Vertical" Grid.Column="1" Grid.Row="1" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal">
                <Label Content="Name: "></Label>
                <Label Content="{Binding Path=Name}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Title: "/>
                <Label Content="{Binding Path=Title}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Id: "/>
                <Label Content="{Binding Path=Id}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Email: "/>
                <Label Content="{Binding Path=Email}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Unit: "/>
                <Label Content="{Binding Path=Unit}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Campus: "/>
                <Label Content="{Binding Path=campus}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Commenced with Institution: "/>
                <Label Content="{Binding Path=commenceWithInstitute}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Current Position: "/>
                <Label Content="{Binding Path=employeeLevelString}"></Label>
            </StackPanel>
        </StackPanel>
        <StackPanel Name="PublicationDetails" Orientation="Vertical" Grid.Column="2" Grid.Row="1" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal">
                <Label Content="Title: "></Label>
                <Label Content="{Binding Path=Title}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="DOI: "></Label>
                <Label Content="{Binding Path=Doi}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Publication Year: "></Label>
                <Label Content="{Binding Path=Year}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Type: "></Label>
                <Label Content="{Binding Path=Type}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Ranking: "></Label>
                <Label Content="{Binding Path=Ranking}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="AvailabilityDate: "></Label>
                <Label Content="{Binding Path=AvailableFrom}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Age: "></Label>
                <Label Content="{Binding Path=Age}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Cite as: "></Label>
                <Label Content="{Binding Path=Cite}"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Ranking: "></Label>
                <Label Content="{Binding Path=Ranking}"></Label>
            </StackPanel>
            <Label Content="Authors"></Label>
            <ListBox Height="100" ItemsSource="{Binding Authors}" Width="380"/>
        </StackPanel>
        <TextBox HorizontalAlignment="Left" Height="25" Margin="42,74,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Researcher" VerticalAlignment="Top" Width="139"/>
    </Grid>
</Window>
